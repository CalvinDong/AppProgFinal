<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      spacing ="10" 
      fx:controller ="controller.ComputerBuilderController" 
      prefWidth="500"
      VBox.vgrow="ALWAYS"
      alignment = "center"
      styleClass = "root">
    <ImageView>
        <image><Image url="view/parts.jpg"/></image>
    </ImageView>
    <Label text="Computer Builder" styleClass="h1"/>
    <HBox alignment="center" spacing="10">
        <Button fx:id="viewCataBtn" wrapText="true" onAction="#handleViewCata" styleClass="largeButton"/>
        <Button fx:id ="viewBuildBtn" wrapText="true" onAction="#handleViewBuild" styleClass ="largeButton"/>
    </HBox>
    <Button fx:id="quitBtn" styleClass ="button" text="Quit" onAction="#handleQuit"/> 
    
    <stylesheets>
        <URL value="@computerbuilder.css"/>
    </stylesheets>
    

</VBox>
